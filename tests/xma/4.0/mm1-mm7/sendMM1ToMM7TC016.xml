<test>
    <configuration>../xmaConfig.xml</configuration>
    <name>SEND.MM1.MM7.TC.016</name>
    <description>Missing Mandatory Parameters in the incoming MM1 requests are properly realized and handled by XMA</description>

    <subtest name="loadVariables" file="loadVariables.xml">
