<test>
    <configuration>../xmaConfig.xml</configuration>
    <name>SEND.MM7.MM7.TC.005</name>
    <description>MM Message is not sent before EarliestDeliveryTime (absolute) [DeliveryReport=No, ReadReply=No] 
    [Sndr + Rcpt Both VASPS]</description>

	<!-- Start Web Server in order to receive & response MM7 Read Reply Reports -->
    <function name="startMMSCServer" module="MMSC">
        <configuration>VASP/PORT</configuration>
        <configuration>WEBSERVER/ROOT</configuration>
        <configuration>WEBSERVER/TIMEOUT</configuration>
    </function>
    
    <!-- Delete Message Store -->
    <subtest>../deleteMessagestoreAll.xml</subtest>
    
    <!-- Load VASP File -->
    <subtest>../loadMultiVASP.xml</subtest>

    <function name="setVariable" module="Basic">
        <parameter>MSISDN</parameter>
        <configuration>VASP/NUMBER2</configuration>
    </function>
   
    <function name="setVariable" module="Basic">
        <parameter>SENDERMSISDN</parameter>
        <configuration>VASP/NUMBER</configuration>
    </function>
   
    <!-- Originator VASP server sends MM7_submit.REQ to XMA. In MM7_submit.REQ please set the following attributes: DeliveryReport=No, ReadReply=No -->
    <function name="createMM7Soap" module="VASP">
        <parameter>SubmitReq</parameter>
        <configuration>VASP/VASPID</configuration>
        <configuration>VASP/VASID</configuration>
    </function>
    <function name="setMessageBoundary" module="VASP">
        <parameter>000001message</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='SubmitReq']</parameter>
        <parameter>Recipients</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='Recipients']</parameter>
        <parameter>To</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='To'][last()]</parameter>
        <parameter>Number</parameter>
        <variable>MSISDN</variable>
    </function>
    <function name="getRemoteSystemTime" module="Remote">
        <parameter>datetime</parameter>
    </function>
    <function name="createDateStringFromEpoch" module="VASP">
        <parameter>EarliestDeliveryTime</parameter>
        <variable>datetime</variable>
        <parameter>120</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='SubmitReq']</parameter>
        <parameter>EarliestDeliveryTime</parameter>
        <variable>EarliestDeliveryTime</variable>
    </function>    
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='SubmitReq']</parameter>
        <parameter>DeliveryReport</parameter>
        <parameter>False</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='SubmitReq']</parameter>
        <parameter>ReadReply</parameter>
        <parameter>False</parameter>
    </function>
    <function name="setSoapData" module="VASP">
        <parameter>//*[local-name()='SubmitReq']</parameter>
        <parameter>Content</parameter>
    </function>
    <function name="setSoapAttribute" module="VASP">
        <parameter>//*[local-name()='Content']</parameter>
        <parameter>href</parameter>
        <parameter>cid:xtt-test001</parameter>
    </function>
    <function name="addContent" module="VASP">
        <file>sendMM7data.txt</file>
    </function>

    <thread>
        <function name="waitForTimeoutRequests" module="MMSC">
            <parameter>119000</parameter>
        </function>
    </thread>
    
    <function name="sendPostRequest" module="VASP"/>
    <function name="checkResponseCode" module="VASP">
        <parameter>200</parameter>
    </function>
    <function name="queryBody" module="VASP">
        <parameter>temp</parameter>
        <parameter>&lt;StatusCode&gt;1000&lt;/StatusCode&gt;</parameter>
    </function>

    <function name="waitOnThreads" module="Basic"/> 

    <function name="waitForRequests" module="MMSC">
        <parameter>1</parameter>
    </function>
    <function name="validateXML" module="XML">
	    <variable>MMSCSERVER/MM7/SOAP</variable>
 	    <parameter></parameter>
        <configuration>MMSCSERVER/XMLNSENV</configuration>
        <configuration>MMSCSERVER/SOAPXSD</configuration>
        <configuration>MMSCSERVER/XMLNSMM7</configuration>
        <configuration>MMSCSERVER/MM7XSD</configuration>
    </function>
	<function name="queryText" module="Basic">
	    <variable>MMSCSERVER/MM7/SOAP</variable>
	    <parameter>dev/null</parameter>
	    <parameter>
            <parameter>&lt;SenderAddress&gt;\s*?&lt;Number&gt;</parameter><variable>SENDERMSISDN</variable><parameter>&lt;/Number&gt;\s*?&lt;/SenderAddress&gt;\s*?&lt;/SenderIdentification&gt;\s*?</parameter>
            <parameter>&lt;Recipients&gt;\s*?&lt;To&gt;\s*?&lt;Number&gt;</parameter><variable>MSISDN</variable><parameter>&lt;/Number&gt;\s*?&lt;/To&gt;\s*?&lt;/Recipients&gt;\s*?</parameter>    	    
        </parameter>
    </function>
        
	<!-- Remove VASP File -->
	<subtest>../restoreVASP.xml</subtest>

	<!-- Stop SMSC Server -->
    <function name="stopMMSCServer" module="MMSC"/>   
</test>
