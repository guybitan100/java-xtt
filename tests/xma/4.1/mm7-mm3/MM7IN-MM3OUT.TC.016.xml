        </parameter>
    </function>    



    
	<!-- Stop MMSC Server -->
	<function name="stopMMSCServer" module="MMSC"/>

    <!-- Remove VASP File -->
    <subtest>../restoreVASP.xml</subtest>
	<!-- Remove MNO File -->
	<subtest>../restoreMNO.xml</subtest>

    <!-- Stop SMTP Server -->
    <function name="stopSMTPServer" module="SMTP"/>
    
</test>
