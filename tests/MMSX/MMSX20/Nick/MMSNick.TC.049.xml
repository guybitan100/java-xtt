    <function name="setVariable" module="Basic">
        <parameter>messageOn</parameter>
		<parameter>
                <variable>nicknameSmsMessagePrefix</variable>
                <parameter>                      </parameter><!--many spaces :-)-->
                <variable>nicknameSmsCondText</variable>
                <parameter>                      </parameter><!--many spaces :-)-->
                <parameter>JACk</parameter>
        </parameter>
    </function>

    <div comment="messageOn is">
        <function name="info" module="Basic">
		    <variable>messageOn</variable>
	    </function>
    </div>
    
    <!-- Start SMSC Server -->
	<function name="startSMSCServer" module="SMS"/>

	<function name="waitForBind" module="SMS"/>

	<!--Saving Server connection for future SMS communication-->
	<function name="getServerConnection" module="SMPP">
         <parameter>MMSX</parameter>
		<parameter>0</parameter>
    </function>

    <function name="sendSMPPPacket" module="SMPP">
		<parameter>MMSX</parameter>
		<parameter>DELIVER_SM</parameter>
		<parameter>internal</parameter>
		<parameter>1</parameter>
		<parameter>0</parameter>
		<parameter>1</parameter>
		<parameter>9833266474</parameter><!--source_address-->
		<parameter>0</parameter>
		<parameter>1</parameter>
        <variable>serviceSmsShortcode</variable><!--destination_addr-->
		<parameter>0</parameter>
		<parameter>0</parameter>
		<parameter>0</parameter>
		<parameter></parameter>
		<parameter></parameter>
		<parameter>0</parameter>
		<parameter>0</parameter>
		<parameter>0</parameter>
		<parameter>0</parameter>
		<variable>messageOn</variable><!--short_message-->
	</function>

    <!-- wait for confirmation SMS message -->
	<function name="waitForMessages" module="SMS">
		<parameter>1</parameter>
	</function>

    <!-- Print SMS Headers source_addr -->
    <function name="info" module="Basic">
        <parameter>smsc/smpp/9833266474/source_addr: </parameter><variable><parameter>smsc/smpp/9833266474/source_addr</parameter></variable>
    </function>

    <!-- Check SMS Headers source_addr -->
    <function name="compareString" module="Basic">
        <variable>smsc/smpp/9833266474/source_addr</variable>
        <variable>serviceSmsShortcode</variable>
    </function>

    <!-- Print SMS Headers destination_addr -->
    <function name="info" module="Basic">
        <parameter>smsc/smpp/9833266474/destination_addr: </parameter><variable><parameter>smsc/smpp/9833266474/destination_addr</parameter></variable>
    </function>

    <!-- Check SMS Headers destination_addr -->
    <function name="compareString" module="Basic">
        <variable>smsc/smpp/9833266474/destination_addr</variable>
        <parameter>9833266474</parameter>
    </function>

    <!-- Print SMS Headers MESSAGE_PAYLOAD -->
    <function name="info" module="Basic">
        <parameter>smsc/smpp/9833266474/MESSAGE_PAYLOAD: </parameter><base64decode><variable>smsc/smpp/9833266474/MESSAGE_PAYLOAD</variable></base64decode>
    </function>

    <!-- Check SMS Headers short_message -->
    <function name="compareString" module="Basic">
        <base64decode><variable>smsc/smpp/9833266474/MESSAGE_PAYLOAD</variable></base64decode>
        <parameter><variable>nicknameStatusCondText</variable><parameter>JACk</parameter></parameter>
    </function>

